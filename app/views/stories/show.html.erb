<h1>Show Story</h1>

<% story = @story %>

<h2><%= link_to story.name, story %></h2>
<h3><%= story.location %></h3>
<p>
  <%= story.age %>, <%= story.gender %>
</p>
Role: <%= story.breakup_role %><br>
Type: <%= story.breakup_type %>

<% if !@recordings.nil? %>
  <ul>
    <% @recordings.each do |recording| %>
      <li>
        <%= recording.id %> -
        <%= link_to recording.source, story_recording_path(@story, recording) %>
      </li>
    <% end %>
  </ul>
<% end %>

<hr>

<%= link_to 'Back', dash_path %> | <%= link_to 'Add Recording', new_story_recording_path(@story) %>

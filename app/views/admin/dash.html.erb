<div class="row">

<h1>Admin</h1>
<p>Note: window.hash is available via JS</p>

<div class="panel">
  <h2>Accounts</h2>
    <% @hash.each do |account| %>
      <p>id: <%= account[:id] %></p>
      <p>uid: <%= account[:uid] %></p>
      <p>created_at: <%= account[:created_at] %></p>
      <p>fromCity: <%= account[:fromCity] %></p>
      <p>fromState: <%= account[:fromState] %></p>
      <p>fromCountry: <%= account[:fromCountry] %></p>
      <h4>Stories</h4>
      <% account[:stories].each do |story| %>
        <p>id: <%= story[:id] %></p>
        <p>was_checked: <%= story[:was_checked] %></p>
        <h5>Recordings</h5>
        <% story[:recordings].each do |recording| %>
          <p>id: <%= recording[:id] %></p>
          <p>url: <%= recording[:url] %></p>
          <p>length: <%= recording[:length] %></p>
        <% end %>
      <% end %>
    <% end %>
</div>

<div class="row">

  <h3>Options</h3>
  <%= link_to "View all recordings", recordings_path, :class=>"button secondary"%>
  <%= link_to "View all stories", stories_path, :class=>"button secondary"%>
</div>

<script>
  window.hash = <%= raw(@hash.to_json) %>;
  console.log(hash);
</script>

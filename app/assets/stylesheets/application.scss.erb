.breakup-pullquote.play{
  background: url('<%= asset_path('play.png') %>');
  background-position: center center;
  background-size: contain;
  background-repeat: no-repeat;
}

.row {
  clear: both;
  width: 100%; }

.breakup-pullquote {
  span{
    background: rgba(228, 204, 109, 0.9);
    padding: .4em .8em;
    font-size: 1.3em;
    color: white;
  }
  position: relative;
  margin: 0 auto;
  width: 70%;
  color: #ffffff;
  top: 20%; }
  @media screen and (max-width: 768px) {
    .breakup-pullquote {
      width: 95%; } }
  .breakup-pullquote .breakup-pullquote-text {
    font-family: 'Muli', Helvetica, arial, sans-serif;
    font-weight: 100;
    font-size: 1em;
    text-align: center;
    line-height: 1.6em;
    margin: 0 3em; }
    @media screen and (max-width: 768px) {
      .breakup-pullquote .breakup-pullquote-text {
        margin: 0 auto;
        width: 90%; } }
  .breakup-pullquote .breakup-pullquote-text:before {
    content: "\“";
    font-family: garamond, serif;
    font-size: 4em;
    position: absolute;
    line-height: 0.8em;
    left: 0;
    color: rgba(0, 0, 0, 0.25); }
    @media screen and (max-width: 768px) {
      .breakup-pullquote .breakup-pullquote-text:before {
        font-size: 3em; } }
  .breakup-pullquote .breakup-pullquote-text:after {
    content: "\”";
    font-family: garamond, serif;
    font-size: 4em;
    position: absolute;
    line-height: 0.8em;
    right: 0;
    color: rgba(0, 0, 0, 0.25); }
    @media screen and (max-width: 768px) {
      .breakup-pullquote .breakup-pullquote-text:after {
        font-size: 3em; } }
  .breakup-pullquote .breakup-pullquote-author {
    font-family: 'Ovo', garamond, serif;
    font-weight: 100;
    font-size: 1.2em;
    /* font-style: italic; */
    text-align: center;
    padding: 2em 0;
    color: #e4cc6d; }
  .breakup-pullquote .breakup-pullquote-tags {
    font-family: 'Muli', Helvetica, arial, sans-serif;
    font-weight: 100;
    font-size: 0.8em;
    font-style: italic;
    text-align: center;
    color: #cccccc; }

